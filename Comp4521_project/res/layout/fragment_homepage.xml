<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/homepage_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="26dp"
        android:contentDescription="Image of User"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/homepage_username"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/homepage_icon"
        android:ellipsize="marquee"
        android:gravity="center"
        android:paddingTop="3dp"
        android:singleLine="true"
        android:text="username"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/homepage_email"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="useremail"
        android:textSize="20sp" />

    <fragment
        android:id="@+id/fragment2"
        android:name="activity.home.HomePageListFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="122dp"
        android:layout_weight="0.50" />

</LinearLayout>